@model Project_62131673.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}
<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<div class="container" style="margin-top:190px;">
    <main aria-labelledby="title">
        <hr />
        <h2 id="title">@ViewBag.Title.</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Tạo tài khoản mới.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(m => m.ConfirmPassword, "Nhập lại mật khẩu", new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="offset-md-2 col-md-10">
                    <input type="submit" value="Đăng ký" class="btn btn-outline-dark" />
                </div>
            </div>
        }
    </main>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
