@model IEnumerable<Project_62131673.Models.EF_62131673.ProductCategory_62131673>

    @if (Model != null && Model.Any())
    {

        <div class="banner">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="banner_item align-items-center" style="background-image: url("@item.Icon")">
                                <div class="banner_category">
                                    <a href="@item.Alias">@item.Title</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    }

